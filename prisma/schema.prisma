generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum LayoutItemType {
  text
  image
  link
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model LayoutGroup {
  id String @id @default(uuid())
  data Json
  LayoutItem LayoutItem[]
}


model LayoutItem {
  id String @id @default(uuid())

  type LayoutItemType
  url String?
  text String?
  btnText String?
  desc String?
  src String?
  metadata Json?

  layoutGroupId String
  layoutGroup LayoutGroup @relation(fields: [layoutGroupId],references: [id], onDelete: Cascade)
}